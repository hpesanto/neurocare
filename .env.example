# Example environment variables for NeuroCare (do NOT commit real secrets here)

# SECRET and debug
# IMPORTANTE: Gere uma SECRET_KEY segura em produção usando:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
NEUROCARE_SECRET_KEY=your-secret-key-here-change-in-production

# Debug mode (SEMPRE false em produção!)
NEUROCARE_DEBUG=true

# Hosts permitidos (separados por vírgula, sem espaços)
NEUROCARE_ALLOWED_HOSTS=127.0.0.1,localhost

# Postgres configuration
NEUROCARE_DB_NAME=postgres
NEUROCARE_DB_USER=postgres
NEUROCARE_DB_PASSWORD=your-secure-password-here
NEUROCARE_DB_HOST=localhost
NEUROCARE_DB_PORT=5432
